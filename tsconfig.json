{
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/vite-react/tsconfig.json"
    // "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "incremental": true,
    "paths": {
      "components/*": ["src/components/*"],
      "static/*": ["src/static/*"],
      "models": ["src/models"],
      "models/*": ["src/models/*"],
      "features/*": ["src/features/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["src-airtable"]
}
