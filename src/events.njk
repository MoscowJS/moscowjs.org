---
layout: base.layout.njk
---

{# <pre>{{ airtable.events | stringify | safe }}</pre> #}

<div>
  <div class="main-container center w-container">
    <h1>События</h1>
    <div class="w-dyn-list">
      <div class="w-dyn-items">

        {% for event in airtable.events %}
          <div class="event-dynamic-item w-dyn-item">
            <a
              href="{{ config.vhost }}/events/{{ event.slug }}/"
              class="event-name"
            >
              {{ event.title }}
            </a>

            {% if event.company.name %}

              {% set venueAnchor = "" %}

              {% if event.venue.slug %}
                {% set venueAnchor = "#" + event.venue.slug %}
              {% endif %}

              <div class="event-linker">
                в
              </div>
              <a
                href="{{ config.vhost }}/companies/{{ event.company.slug }}/{{ venueAnchor }}"
                class="event-host"
              >
                {{ event.company.name }}
              </a>
            {% elif event.venue.name %}
              <div class="event-linker">
                в
              </div>
              <a class="event-host">
                {{ event.venue.name }}
              </a>
            {% endif %}

            <p class="event-date">
              {{ event.date | toDateFormat("d MMMM yyyy, HH:mm") }}
            </p>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>
</div>
